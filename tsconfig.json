{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "DOM"],
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "tpl",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "declaration": true,
    "declarationDir": "./dist/types",
    "paths": {
      "@xania/glow.js": ["./glow.js/lib/index.ts"],
      "@xania/glow.js/*": ["./glow.js/*"],
      "@xania/mutabl.js": ["./mutabl.js/lib/index.ts"],
      "@xania/mutabl.js/*": ["./mutabl.js/*"],
      "@xania/mvc.js": ["./mvc.js/index.ts"],
      "@xania/mvc.js/*": ["./mvc.js/*"]
    }
  }
}